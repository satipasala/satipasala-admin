{
  "compileOnSave": false,
  "compilerOptions": {
   "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@satipasala/base": ["libs/base/src/index.ts"],
      "@satipasala/core": ["libs/core/src/index.ts"],
      "@satipasala/testing": ["libs/testing/src/index.ts"],
      "@satipasala/google-charts": ["libs/google-charts/src/index.ts"]
    }
  },
  "exclude": [
  "node_modules",
  "tmp",
    "apps/nativescript-*"
  ],
  "includes": [
    "xplat/**/*.{ios,android}.ts"
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": true,
    "enableIvy":true,
    "fullTemplateTypeCheck": false,
    "strictInjectionParameters": false
  }

}
